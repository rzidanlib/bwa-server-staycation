<%- include('../../partials/header.ejs') %>

<!-- Page Wrapper -->
<div id="wrapper">

  <%- include('../../partials/sidebar.ejs') %>


  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

      <%- include('../../partials/navbar.ejs') %>

      <!-- Begin Page Content -->
      <div class="container-fluid">
        <%- include('../../partials/message.ejs') %>

        <!-- Page Heading -->
        <h1 class="h3 mb-4 text-gray-800">Item</h1>

        <% if(action === 'view') { %>
        <nav>
          <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <a class="nav-item nav-link active" id="show-item-tab" data-toggle="tab" href="#show-item" role="tab" aria-controls="show-item" aria-selected="true">Show Item</a>
            <a class="nav-item nav-link" id="add-item-tab" data-toggle="tab" href="#add-item" role="tab" aria-controls="add-item" aria-selected="false">Add Item</a>
          </div>
        </nav>
        <div class="tab-content" id="nav-tabContent">
          <%- include('./show_table_item.ejs') %>
          <%- include('./add_item.ejs') %>
        </div>
        <% } else if(action === 'show image') { %>
        <nav>
          <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <a class="nav-item nav-link active" id="show-image-tab" data-toggle="tab" href="#show-image" role="tab" aria-controls="show-image" aria-selected="true">Show Image</a>
          </div>
        </nav>
        <div class="tab-content" id="nav-tabContent">
          <%- include('./show_image_item.ejs') %>
        </div>
        <% } else { %>
        <nav>
          <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <a class="nav-item nav-link active" id="show-edit-tab" data-toggle="tab" href="#show-edit" role="tab" aria-controls="show-edit" aria-selected="true">Edit Item</a>
          </div>
        </nav>
        <div class="tab-content" id="nav-tabContent">
          <%- include('./edit_item.ejs') %>
        </div>
        <% } %>
      </div>
      <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->

    <%- include('../../partials/footer.ejs') %>


  </div>
  <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->


<%- include('../../partials/js.ejs') %>
<script>
  CKEDITOR.replace('about');
</script>